    "/api/v1/user/{email}/accounts": {
      "get": {
        "summary": "(Get user accounts by email)",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "path",
            "required": true
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "number",
                  "example": 200
                },
                "accounts": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number"
                      },
                      "accountnumber": {
                        "type": "string"
                      },
                      "createdon": {
                        "type": "string"
                      },
                      "owneremail": {
                        "type": "string"
                      },
                      "type": {
                        "type": "string"
                      },
                      "status": {
                        "type": "string"
                      },
                      "balance": {
                        "type": "number"
                      }
                    }
                  },
                  "example": [
                    {
                      "id": 33,
                      "accountnumber": "2625414032",
                      "createdon": "2019-04-21T15:49:03.909-07:00",
                      "owneremail": "test@banka.com",
                      "type": "savings",
                      "status": "dormant",
                      "balance": 10000
                    }
                  ]
                }
              }
            }
          }
        }
      }
