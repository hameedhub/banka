    "/api/v1/auth/signin": {
      "post": {
        "summary": "Users sign route",
        "consumes": [
          "application/json"
        ],
        "parameters": [],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "number",
                  "example": 200
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "123abc"
                    },
                    "id": {
                      "type": "number",
                      "example": 2
                    },
                    "firstname": {
                      "type": "string",
                      "example": "John"
                    },
                    "lastname": {
                      "type": "string",
                      "example": "Micheal"
                    },
                    "email": {
                      "type": "string",
